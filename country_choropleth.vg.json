{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "height": 600,
  "width": 1000,
  "title": {
    "text": "Suicides per 100,000 people, per country, over time",
    "align": "center",
    "dx": 10,
    "fontSize": 16
  },
  "projection": {
    "type": "equalEarth"
  },
  "config": {
    "style": {
      "cell": {
        "stroke": "transparent"
      }
    },
    "background": "#ebded0"
  },
  "data": {
    "url": "./data/clean.csv"
  },
  "params": [
    {
      "name": "Year",
      "value": "2019",
      "bind": {
        "input": "range",
        "min": 2000,
        "max": 2019,
        "step": 1
      }
    },
    {
      "name": "Sex",
      "value": "both_suicide",
      "bind": {
        "input": "select",
        "options": [
          "both_suicide",
          "male_suicide",
          "female_suicide"
        ],
        "labels": [
          "All",
          "Male",
          "Female"
        ]
      }
    }
  ],
  "transform": [
    {
      "filter": "datum.year == Year"
    },
    {
      "filter": "datum.type == Sex"
    },
    {
      "lookup": "country",
      "from": {
        "data": {
          "url": "./data/ne.topojson",
          "format": {
            "type": "topojson",
            "feature": "ne"
          }
        },
        "key": "properties.NAME"
      },
      "as": "geo"
    }
  ],
  "mark": {
    "type": "geoshape"
  },
  "encoding": {
    "tooltip": [
      {
        "field": "country",
        "type": "nominal",
        "title": "Country"
      },
      {
        "field": "value",
        "type": "quantitative",
        "title": "Suicide rate"
      }
    ],
    "shape": {
      "field": "geo",
      "type": "geojson"
    },
    "color": {
      "field": "value",
      "type": "quantitative",
      "scale": {
        "type": "threshold",
        "domain": [
          4,
          9,
          13,
          17,
          25
        ],
        "range": [
          "#ed9b25",
          "#e75d1e",
          "#d04632",
          "#8f3a36",
          "#6f3734",
          "#3e3534"
        ]
      },
      "legend": {
        "title": "Suicides per 100,000 people",
        "orient": "bottom"
      }
    }
  }
}